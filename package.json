{
  "name": "vscode-velma-debug",
  "displayName": "VS Code Velma Debug Adapter",
  "version": "1.0.0",
  "publisher": "SeesePlusPlus",
  "description": "Visual Studio Code debug adapter for the Velma Solidity Debugger runtime",
  "author": {
    "name": "Mike Seese",
    "email": "seesemichaelj@gmail.com"
  },
  "keywords": [
    "solidity",
    "debug",
    "ethereum",
    "velma",
    "vscode"
  ],
  "engines": {
    "vscode": "^1.17.0",
    "node": "^7.9.0"
  },
  "categories": [
    "Debuggers"
  ],
  "dependencies": {
    "path": "^0.12.7",
    "velma": "seeseplusplus/velma",
    "vscode": "^1.1.6",
    "vscode-debugadapter": "^1.25.0",
    "vscode-debugprotocol": "^1.25.0",
    "ws": "4.0.0"
  },
  "devDependencies": {
    "@types/node": "^8.0.54",
    "@types/ws": "^4.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3",
    "vsce": "^1.34.0",
    "vscode-debugadapter-testsupport": "^1.25.0"
  },
  "scripts": {
    "prepublish": "tsc -p ./src",
    "compile": "tsc -p ./src",
    "tslint": "tslint ./src/**/*.ts",
    "watch": "tsc -w -p ./src",
    "test": "mocha --inspect-brk -u tdd ./out/test/",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "main": "./out/src/extension",
  "activationEvents": [
    "onDebug"
  ],
  "contributes": {
    "breakpoints": [
      {
        "language": "solidity"
      }
    ],
    "debuggers": [
      {
        "type": "velma",
        "label": "Velma Solidity Debugger",
        "program": "./out/src/debug.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [],
            "properties": {
              "stopOnEntry": {
                "type": "boolean",
                "description": "Automatically stop after launch.",
                "default": true
              },
              "trace": {
                "type": "boolean",
                "description": "Enable logging of the Debug Adapter Protocol.",
                "default": true
              },
              "port": {
                "type": "number",
                "description": "This is the port that is used to communicate with TestRPC/Ganache-Core",
                "default": 8455
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "velma",
            "request": "launch",
            "name": "Debug Solidity",
            "stopOnEntry": false,
            "port": 8455
          }
        ],
        "configurationSnippets": [
          {
            "label": "Solidity: Launch",
            "description": "Runs Velma Solidity Debugger and attaches to a TestRPC instance",
            "body": {
              "type": "velma",
              "request": "launch",
              "name": "Debug Solidity",
              "stopOnEntry": false,
              "port": 8455
            }
          }
        ],
        "variables": {}
      }
    ]
  },
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/seeseplusplus/vscode-velma-debug.git"
  },
  "bugs": {
    "url": "https://github.com/seeseplusplus/vscode-velma-debug/issues"
  },
  "homepage": "https://github.com/seeseplusplus/vscode-velma-debug#README"
}
